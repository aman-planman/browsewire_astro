---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
---

<BaseLayout title="O-Tech || About">
    <Header />

    <main>
        <!--================= Banner section start =================-->
        <section
            class="vl-breadcrumb-bg p-relative z-index-1 fix pt-200 pb--70"
            style="background-image: url(/assets/img/banner/vl-breadcrumb-bg.png);"
        >
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-md-6 mb-30">
                        <div class="vl-breadcrumb">
                            <h1 class="vl-fs-60 vl-white">About Us</h1>
                            <div class="vl-breadcrumb-list">
                                <span><a href="/">Home</a></span>
                                <span class="dvir"
                                    ><i class="fa-solid fa-angle-right"
                                    ></i></span
                                >
                                <span class="active"
                                    ><a href="#">About us</a></span
                                >
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6 mb-30">
                        <div class="vl-hero-img p-relative">
                            <div class="vl-hero-shape-4">
                                <div class="vl-shape-2">
                                    <img
                                        src="/assets/img/icons/vl-emoji-4.2.svg"
                                        alt=""
                                    />
                                </div>
                                <div class="vl-shape-3">
                                    <img
                                        src="/assets/img/icons/vl-emoji-4.3.svg"
                                        alt=""
                                    />
                                </div>
                            </div>
                            <div class="vl-breadcrumb-fan">
                                <img
                                    class="w-100"
                                    src="/assets/img/icons/vl-fan-sm.svg"
                                    alt=""
                                />
                            </div>
                            <div class="vl-breadcrumb-img">
                                <img
                                    src="/assets/img/banner/vl-breadcrumb-1.png"
                                    alt=""
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================= Banner section End =================-->

        <!--================= About section start =================-->
        <section id="about" class="vl-about-area pt-100 pb-70">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 mb-30">
                        <div class="vl-about-imgs mr-60">
                            <div class="vl-about-img-1">
                                <img
                                    src="/assets/img/about/vl-about-1.1.png"
                                    alt=""
                                />
                            </div>
                            <div class="vl-about-img-1 vl-about-img-2">
                                <img
                                    src="/assets/img/about/vl-about-1.2.png"
                                    alt=""
                                />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-30">
                        <div class="vl-about-content iner-about">
                            <div class="vl-section-title-wrapper">
                                <h4 class="vl-section-subtitle-7 vl-upper">
                                    About us
                                </h4>
                                <h2
                                    class="vl-section-title vl-section-title-2 pt-16 pb-20"
                                >
                                    Empower Your Business<br /> Every Step of the
                                    Way
                                </h2>
                                <p class="vl-section-description-2 pb-32">
                                    Whether it optimizing IT infrastructure,
                                    enhancing cybersecurity, <br />or driving
                                    digital transformation, we are committed to
                                    helping.
                                </p>
                            </div>

                            <div
                                class="vl-about-icon-box vl-about-icon-box-2 mb-30 d-flex"
                            >
                                <div class="vl-about-icon vl-about-icon-2">
                                    <span
                                        ><i class="fa-regular fa-check"
                                        ></i></span
                                    >
                                </div>
                                <div
                                    class="vl-about-icon-content vl-about-icon-content-2"
                                >
                                    <h4 class="vl-about-icon-title pb-16 m-0">
                                        Strategic Planning
                                    </h4>
                                    <p class="vl-about-icon-desc m-0">
                                        We specialize in delivering tailored IT
                                        solutions empower businesses to thrive
                                        in the digital era. Our team experts <br
                                        /> brings deep industry knowledge, cutting-edge
                                        tools.
                                    </p>
                                </div>
                            </div>

                            <div class="vl-about-inner-btn">
                                <a href="#" class="vl-iner-btn"
                                    >Learn more <span
                                        ><i class="fa-light fa-arrow-right"
                                        ></i></span
                                    ></a
                                >
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-5 mb-30">
                        <div class="vl-about-inner-box-active">
                            <div
                                class="vl-about-inner-box-content vl-gray-bg-4 p-relative br-8"
                            >
                                <h3 class="vl-about-inner-box-title pb-16">
                                    <a href="#">Our Mission</a>
                                </h3>
                                <p>
                                    Our mission is to empower businesses through
                                    best <br /> innovative IT solutions that drive
                                    growth, efficiency <br /> digital transformation.
                                    We committed to delivering <br /> exceptional
                                    service, fostering long partnerships, <br /> and
                                    leveraging the latest technologies to help.
                                </p>
                            </div>

                            <div
                                class="vl-about-inner-box-content vl-gray-bg-4 p-relative br-8"
                            >
                                <h3 class="vl-about-inner-box-title pb-16">
                                    <a href="#">Our Mission</a>
                                </h3>
                                <p>
                                    Our mission is to empower businesses through
                                    best <br /> innovative IT solutions that drive
                                    growth, efficiency <br /> digital transformation.
                                    We committed to delivering <br /> exceptional
                                    service, fostering long partnerships, <br /> and
                                    leveraging the latest technologies to help.
                                </p>
                            </div>

                            <div
                                class="vl-about-inner-box-content vl-gray-bg-4 p-relative br-8"
                            >
                                <h3 class="vl-about-inner-box-title pb-16">
                                    <a href="#">Our Mission</a>
                                </h3>
                                <p>
                                    Our mission is to empower businesses through
                                    best <br /> innovative IT solutions that drive
                                    growth, efficiency <br /> digital transformation.
                                    We committed to delivering <br /> exceptional
                                    service, fostering long partnerships, <br /> and
                                    leveraging the latest technologies to help.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="vl-about-vido fix p-relative br-8 mb-30">
                            <img
                                class="w-100"
                                src="/assets/img/about/vl-video-img.png"
                                alt=""
                            />
                            <div class="vl-sec-img-vi-4">
                                <a
                                    href="https://www.youtube.com/watch?v=vi8GrSp4Y6w"
                                    class="popup-video"
                                >
                                    <span><i class="fa-solid fa-play"></i></span
                                    >
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================= About section End =================-->

        <!--================= Choose section start =================-->
        <section class="vl-about-choose vl-gray-bg-4 pt-100 pb-70 p-relative">
            <div class="container">
                <div class="vl-section-title-wrapper mb-60">
                    <h4 class="vl-section-subtitle-7 vl-upper">
                        Why choose us
                    </h4>
                    <h2 class="vl-section-title vl-section-title-2 pt-16">
                        We Don't Just Deliver Solutions <br /> We Build Partnerships
                    </h2>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-relative z-index-1">
                            <div class="row">
                                <div class="col-lg-5 col-md-6">
                                    <div class="vl-about-choose-img mb-30">
                                        <img
                                            class="w-100 img-custom-anim-left"
                                            src="/assets/img/about/vl-about-choose-1.png"
                                            alt=""
                                        />
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6">
                                    <div
                                        class="vl-about-choose-img-2 fix br-8 mb-30"
                                    >
                                        <img
                                            class="w-100"
                                            src="/assets/img/about/vl-about-choose-2.png"
                                            alt=""
                                        />
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="vl-about-choose-content">
                                        <p>
                                            We understand that every business is
                                            unique, <br />is why we offer
                                            customized IT solutions that <br /> fit
                                            your needs perfectly. Our approach rooted
                                            <br /> in collaboration and innovation,
                                            ensuring you <br /> receive the best tools
                                            and strategies.
                                        </p>
                                        <div class="vl-about-inner-btn">
                                            <a
                                                href="/service"
                                                class="vl-iner-btn"
                                                >Learn more <span
                                                    ><i
                                                        class="fa-light fa-arrow-right"
                                                    ></i></span
                                                ></a
                                            >
                                        </div>
                                    </div>
                                </div>

                                <div
                                    class="vl-hero-counter vl-about-choose-counter"
                                >
                                    <div
                                        class="vl-hero-counter-box vl-about-choose-counter-box mb-30"
                                    >
                                        <span class="counter">90</span><span
                                            >k</span
                                        >
                                        <h4
                                            class="vl-hero-counter-box-title title-2 pt-12"
                                        >
                                            Happy Client
                                        </h4>
                                    </div>
                                    <div
                                        class="vl-hero-counter-box vl-about-choose-counter-box mb-30"
                                    >
                                        <span class="counter">650</span><span
                                            >+</span
                                        >
                                        <h4
                                            class="vl-hero-counter-box-title title-2 pt-12"
                                        >
                                            Total Projects
                                        </h4>
                                    </div>

                                    <div
                                        class="vl-hero-counter-box vl-about-choose-counter-box mb-30"
                                    >
                                        <span class="counter">85</span><span
                                            >+</span
                                        >
                                        <h4
                                            class="vl-hero-counter-box-title title-2 pt-12"
                                        >
                                            Work Together
                                        </h4>
                                    </div>

                                    <div
                                        class="vl-hero-counter-box vl-about-choose-counter-box mb-30"
                                    >
                                        <span class="counter">12</span><span
                                            >+</span
                                        >
                                        <h4
                                            class="vl-hero-counter-box-title title-2 pt-12"
                                        >
                                            Year of Experience
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================= Choose section end =================-->

        <!--================= Cta section start =================-->
        <section class="vl-cta">
            <div class="container">
                <div
                    class="vl-cta-bg-1 vl-cta-bg-4 p-relative fix br-8 pt-80 pb-50"
                >
                    <div class="vl-cta-shape">
                        <img
                            src="/assets/img/icons/vl-cta-shape-4.1.svg"
                            alt=""
                        />
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="vl-cta-wrapper mb-30">
                                <h2 class="vl-cta-wrapper-title vl-white pb-32">
                                    Transform Your Business Contact Us Today
                                </h2>

                                <div class="vl-cta-mailform">
                                    <form action="#">
                                        <div class="vl-cta-mail">
                                            <input
                                                type="email"
                                                placeholder="Email Address"
                                            />
                                            <div class="vl-cta-mail-btn">
                                                <div
                                                    class="vl-herobtn vl-aboutbtn vl-upper"
                                                >
                                                    <button
                                                        class="theme-btn theme-btn2 vl-upper"
                                                        >Subscribe Now <span
                                                            ><i
                                                                class="fa-regular fa-arrow-right"
                                                            ></i></span
                                                        ></button
                                                    >
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="vl-cta-img p-relative z-index-1">
                                <img
                                    src="/assets/img/cta/vl-cta-main-4.1.png"
                                    alt=""
                                />
                                <div class="vl-cta-half-circle">
                                    <img
                                        src="/assets/img/shape/vl-cta-iner-shape.png"
                                        alt=""
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--================= Cta section End =================-->
    </main>

    <Footer />
</BaseLayout>
